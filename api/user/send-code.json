{
    "name": "发送验证码(手机/邮箱)",
    "method": "GET",
    "params": {
        "title": {
            "rem": "邮箱或手机号",
            "need": true,
            "reg": "^(1\\d{10})|(([\\w-])+@([\\w-])+(.[\\w-])+)$"
        },
        "code": {
            "rem": "图片验证码",
            "reg": "\\w{4,8}"
        }
    },
    "check": {
        "!/^1\\d{10}$/.test($B.title)||$B.code": "发送手机验证码必须提交图片验证码"
    },
    "error": {
        "404": "图片验证码过期",
        "405": "图片验证码错误",
        "406": "发送验证码失败"
    },
    "ret": {
        "no": 200
    }
}