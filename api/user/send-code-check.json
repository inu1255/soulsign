{
    "name": "验证验证码(手机/邮箱)",
    "method": "GET",
    "params": {
        "title": {
            "rem": "邮箱或手机号",
            "need": true,
            "reg": "^(1\\d{10})|(([\\w-])+@([\\w-])+(.[\\w-])+)$"
        },
        "code": {
            "rem": "验证码",
            "need": true,
            "reg": "\\w{4,8}"
        }
    },
    "error": {
        "406": "验证码错误",
        "407": "验证码已过期,请重新发送验证码"
    },
    "ret": {
        "no": 200
    }
}