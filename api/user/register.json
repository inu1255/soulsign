{
    "name": "注册",
    "method": "POST",
    "params": {
        "account": {
            "rem": "账号",
            "need": true,
            "reg": "^\\w{3,32}$"
        },
        "title": {
            "rem": "邮箱或手机号",
            "need": true,
            "reg": "^(1\\d{10})|(([\\w-])+@([\\w-])+(.[\\w-])+)$"
        },
        "password": {
            "rem": "密码",
            "need": true,
            "len": [6, 32]
        },
        "code": {
            "rem": "验证码",
            "need": true,
            "reg": "^\\w{4,8}$"
        },
        "name": {
            "rem": "姓名"
        },
        "zi": {
            "rem": "字"
        },
        "birthday": {
            "rem": "生日",
            "reg": "^-?\\d{1,4}-\\d{2}-\\d{2}$"
        },
        "birthtime": {
            "rem": "出生时间",
            "reg": "^\\d{2}:\\d{2}$"
        },
        "idcard": {
            "rem": "身份证号",
            "reg": "^\\d{17}[\\dx]^"
        },
        "desc": {
            "rem": "个人介绍"
        }
    },
    "error": {
        "405": "邮箱/手机被占用",
        "406": "验证码错误",
        "407": "验证码已过期,请重新发送验证码",
        "408": "账号已存在"        
    },
    "ret": {
        "no": 200,
        "msg": "",
        "data": {
            "id|+1": 1,
            "account": "@regex(\\w{1,32})",
            "name": "@cname",
            "zi": "@clast@clast",
            "birthday": "@date('yyyy-MM-dd')",
            "birthtime": "@time('HH:mm:ss')",
            "telphone": "@regex(\\d{11})",
            "idcard": "@id",
            "avatar": "@image('80x80')",
            "desc": "@cparagraph"
        }
    }
}